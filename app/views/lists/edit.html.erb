<h1>Editing Book</h1>
<%= form_with model: @book,url:update_list_path(@book.id),method: :patch do |f|%>

  <label>Title</label>
  <%= f.text_field :title %>

  <label>Body</label>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>

<p><span><%= link_to "show", book_path(@book.id) %></span> | <span><%= link_to "Back", index_path %></span></p>