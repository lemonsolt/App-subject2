<div class="index-body">
  <h1>Books</h1>
  <table class="book-list">
    <thead>
      <tr>
        <th class="book-title">Title</th>
        <th class="book-body">Body</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @books.each do |book| %>
          <tr>
            <td class="book-title"><span><%= book.title %></span></td>
            <td class="book-body"><span><%= book.body %></span></td>
            <td class="action"><span><%= link_to "show", book_path(book.id) %></span></td>
            <td class="action"><span><%= link_to "Edit",edit_path(book.id)%></span></td>
            <td><span><%= link_to "Destroy",list_path(book.id),method: :delete, "data-confirm" => "Are you sure?"%></span></td>
          </tr>
        <% end %>
      </tr>
    </tbody>
  </table>


  <%= form_with model: @book,url: '/lists', method: :post do |f| %>
    <h2 class="new-book">New book</h2>
    <label>Title</label>
    <%= f.text_field :title%>
    <label>Body</label>
    <%= f.text_area :body %>

    <label><%= f.submit 'Create Book'%></label>
  <% end %>
</div>