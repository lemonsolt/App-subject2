<div class="flash">
  <%= flash[:notice] %>
</div>
<div class="index-body">
  <h1>Books</h1>
  <table class="book-list">
    <thead>
      <tr>
        <th class="book-title">Title</th>
        <th class="book-body">Body</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @books.each do |book| %>
          <tr>
            <td class="book-title"><span><%= book.title %></span></td>
            <td class="book-body"><span><%= book.body %></span></td>
            <td class="action"><span><%= link_to "show", book_path(book.id) %></span></td>
            <td class="action"><span><%= link_to "Edit",edit_book_path(book.id)%></span></td>
            <td><span><%= link_to "Destroy",book_path(book.id),method: :delete, "data-confirm" => "Are you sure?"%></span></td>
          </tr>
        <% end %>
      </tr>
    </tbody>
  </table>


  <%= form_with model: @book do |f| %>
    <h2 class="new-book">New book</h2>
    <% if @book.errors.any? %>
      <div class="error-box">
        <h2 class="error-explanation">
          <%= @book.errors.count %>errors prohibited this book from being saved:
        </h2>
        <ul class="error-block">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <div class="error_box_second">
        <label class="field-with-errors">Title</label>
        <div class="field-with-errors"><%= f.text_field :title %></div>
        <label class="field-with-errors">Body</label>
        <div class="field-with-errors"> <%= f.text_area :body %> </div>
      </div>

    <% else %>
      <label>Title</label>
      <%= f.text_field :title%>
      <label>Body</label>
      <%= f.text_area :body %>

    <% end %>

    <label><%= f.submit 'Create Book'%></labe>
  <% end %>
</div>